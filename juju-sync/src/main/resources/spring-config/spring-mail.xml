        <!-- 注意:这里的参数(如用户名、密码)都是针对邮件发送者的 -->
        <bean id="mailSender"
              class="org.springframework.mail.javamail.JavaMailSenderImpl">
            <property name="host">
                <value>${java.mail.host}</value>
            </property>
            <property name="javaMailProperties">
                <props>
                    <prop key="mail.smtp.auth">${java.mail.auth}</prop>
                    <prop key="mail.smtp.timeout">${java.mail.timeout}</prop>
                </props>
            </property>
            <property name="username">
                <value>${java.mail.username}</value>
            </property>
            <property name="password">
                <value>${java.mail.password}</value>
            </property>
        </bean>

    <bean id="freeMarker" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="classpath:mailTemplate"/>
        <!--指定模板文件目录-->
        <property name="freemarkerSettings">
            <!-- 设置FreeMarker环境属性-->
            <props>
                <prop key="template_update_delay">1800</prop>
                <!--刷新模板的周期，单位为秒-->
                <prop key="default_encoding">UTF-8</prop>
                <!--模板的编码格式 -->
                <prop key="locale">zh_CN</prop>
                <!-- 本地化设置-->
            </props>
        </property>
    </bean>
</beans>

